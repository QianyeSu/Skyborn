[run]
source = src
omit =
    */windspharm/iris.py
    */spharm/__init__.py
    */tests/*
    */build/*
    */site-packages/*
    */spharm/fix_f2py_symbols.py
    */conversion/grib_to_netcdf.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
